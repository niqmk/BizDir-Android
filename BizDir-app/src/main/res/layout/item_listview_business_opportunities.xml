<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dip">

    <FrameLayout
        android:id="@+id/item_icon"
        android:layout_width="@dimen/frame_icon_gridview_height"
        android:layout_height="@dimen/frame_icon_gridview_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/frame"
            android:layout_width="@dimen/frame_icon_gridview_height"
            android:layout_height="@dimen/frame_icon_gridview_height"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/frame_gridview_item" />

        <TextView
            android:id="@+id/date"
            style="@style/TextShadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1"
            android:paddingBottom="15dp"
            android:text="20"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/dateMonthYear"
            style="@style/TextShadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal|bottom"
            android:lines="1"
            android:maxLines="1"
            android:paddingBottom="12dp"
            android:text="20"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/TextShadow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="Example application Isi good adsasdas asdsdasd"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageEnvelope"
                android:layout_width="@dimen/listview_business_oppor_icon_height"
                android:layout_height="@dimen/listview_business_oppor_icon_height" />

            <TextView
                android:id="@+id/textEmailCount"
                style="@style/TextShadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:singleLine="true"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageEye"
                android:layout_width="@dimen/listview_business_oppor_icon_height"
                android:layout_height="@dimen/listview_business_oppor_icon_height"
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/textViewCount"
                style="@style/TextShadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:singleLine="true"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>