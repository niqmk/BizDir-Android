<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/list_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent" />

    <com.github.ksoichiro.android.observablescrollview.ObservableGridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/banner_image_height"
        android:cacheColorHint="@color/listview_cache_color_hint"
        android:numColumns="@integer/num_columns_gridview"
        android:verticalSpacing="3dp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_image_height"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/advertising_image" />

    <!--<include layout="@layout/gradient_header" /> -->
</FrameLayout>