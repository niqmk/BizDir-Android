<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:layout_marginEnd="@dimen/material_drawer_margin"
    android:layout_marginRight="@dimen/material_drawer_margin"
    android:elevation="8dp"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_top"
        layout="@layout/toolbar_top" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <id.bizdir.ui.widget.DrawShadowFrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:clipChildren="false"
        app:shadowDrawable="@drawable/header_shadow">

        <ImageView
            android:id="@+id/ivBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/background_main" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:fillViewport="true"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin">

                    <TextView
                        style="@style/TextTitleLitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/user_full_name" />

                    <EditText
                        android:id="@+id/editFullName"
                        style="@style/EditTextNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/user_full_name"
                        android:inputType="textPersonName"
                        android:maxLength="50" />

                    <TextView
                        style="@style/TextTitleLitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/member_detail_contact_email_address" />

                    <EditText
                        android:id="@+id/editEmail"
                        style="@style/EditTextTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="true"
                        android:hint="@string/member_detail_contact_email_address"
                        android:inputType="textEmailAddress"
                        android:maxLength="128" />

                    <TextView
                        style="@style/TextTitleLitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/user_phone" />

                    <EditText
                        android:id="@+id/editPhone"
                        style="@style/EditTextNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/user_phone"
                        android:inputType="phone"
                        android:maxLength="50" />

                    <TextView
                        style="@style/TextTitleLitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/user_gender" />

                    <RadioGroup
                        android:id="@+id/radioGroupGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_gender_male" />

                        <RadioButton
                            android:id="@+id/radioFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@string/user_gender_Female" />
                    </RadioGroup>

                    <TextView
                        style="@style/TextTitleLitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/user_birthday" />

                    <EditText
                        android:id="@+id/editBirthday"
                        style="@style/EditTextTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:focusable="false"
                        android:focusableInTouchMode="true"
                        android:hint="@string/user_birthday"
                        android:inputType="date" />

                    <TextView
                        style="@style/TextTitleLitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/user_no_kta" />

                    <EditText
                        android:id="@+id/editNoKta"
                        style="@style/EditTextNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/user_no_kta"
                        android:inputType="phone"
                        android:maxLength="14" />

                    <TextView
                        style="@style/TextTitleLitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/user_interest" />

                    <EditText
                        android:id="@+id/editInterest"
                        style="@style/EditTextTitleMax7Line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:focusable="false"
                        android:focusableInTouchMode="true"
                        android:hint="@string/user_interest"
                        android:inputType="text" />

                    <TextView
                        style="@style/TextTitleLitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/user_bizdirid" />

                    <EditText
                        android:id="@+id/editBizDirId"
                        style="@style/EditTextTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:focusable="false"
                        android:focusableInTouchMode="true"
                        android:hint="@string/user_bizdirid"
                        android:inputType="text" />

                    <com.rey.material.widget.Button
                        android:id="@+id/buttonSubmit"
                        style="@style/RaiseWaveButtonRippleStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bt_height"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/bottom_submit"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
                        android:textColor="@color/primary_text_default_material_light" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </id.bizdir.ui.widget.DrawShadowFrameLayout>
</RelativeLayout>

