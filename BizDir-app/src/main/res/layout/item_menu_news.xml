<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dip"
    android:paddingLeft="10dp">

    <LinearLayout
        android:id="@+id/frameImageNews"
        android:layout_width="@dimen/news_height"
        android:layout_height="@dimen/news_height"
        android:layout_centerVertical="true"
        android:background="@drawable/movie_list_frame_shadow"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imageNewsBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/default_member" />

            <ImageView
                android:id="@+id/imageNews"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/default_member" />


        </FrameLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/frameImageNews"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitle"
            style="@style/TextShadow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="Example application"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textTime"
            style="@style/TextShadow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="Example application"
            android:textColor="@color/material_light_background_300"
            android:textSize="12sp" />

    </LinearLayout>


</RelativeLayout>